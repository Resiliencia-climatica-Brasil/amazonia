var table = ee.FeatureCollection("projects/ee-lucasljardim9/assets/Biome")
                        .map(function(feature){
                             return feature.bounds()
                             })
                        .geometry()
                        .dissolve({'maxError': 1})
                        .bounds();



var brasil_raster = ee.Image("projects/ee-lucasljardim9/assets/brasil_raster");

var Z_elev_orig    = ee.Image('projects/ee-lucasljardim9/assets/Z-Scores_elevation_range').updateMask(brasil_raster);
var Z_land_orig   = ee.Image('projects/ee-lucasljardim9/assets/Z-Scores_landforms').updateMask(brasil_raster);
var Z_soil_orig   = ee.Image('projects/ee-lucasljardim9/assets/Z-Scores_soil_diversity').updateMask(brasil_raster);
var Z_wet_orig   = ee.Image('projects/ee-lucasljardim9/assets/Z-Scores_wetlands').updateMask(brasil_raster);

var Z_elev_3 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_elevation_range").updateMask(brasil_raster);
var Z_land_3 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_landforms").updateMask(brasil_raster);
var Z_soil_3 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_soil_diversity").updateMask(brasil_raster);
var Z_wet_3 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_wetlands").updateMask(brasil_raster);

var Z_elev_75 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_elevation_range_quartiles").updateMask(brasil_raster);
var Z_land_75 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_landforms_quartiles").updateMask(brasil_raster);
var Z_soil_75 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_soil_diversity_quartiles").updateMask(brasil_raster);
var Z_wet_75 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_wetlands_quartiles").updateMask(brasil_raster);

var Z_elev_95 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_elevation_range_95quartiles").updateMask(brasil_raster);
var Z_land_95 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_landforms_95quartiles").updateMask(brasil_raster);
var Z_soil_95 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_soil_diversity_95quartiles").updateMask(brasil_raster);
var Z_wet_95 = ee.Image("projects/ee-resilience/assets/EXPORT/Z-Scores_wetlands_95quartiles").updateMask(brasil_raster);


var scale = Z_elev_orig.projection().nominalScale();


var histogram = ui.Chart.image.histogram(({
  image: Z_elev_orig,
  scale: scale,
  maxPixels: 1e13}))
  .setOptions({
    title: 'Histogram of Pixel Values Original' ,
    hAxis: {title: 'Pixel Value'},
    vAxis: {title: 'Count'},
    legend: 'none'
  });
  
  print(histogram)
  
  var histogram = ui.Chart.image.histogram(({
  image: Z_elev_3,
  scale: scale,
  maxPixels: 1e13}))
  .setOptions({
    title: 'Histogram of Pixel Values 3.5' ,
    hAxis: {title: 'Pixel Value'},
    vAxis: {title: 'Count'},
    legend: 'none'
  });
  
  print(histogram)

var histogram = ui.Chart.image.histogram(({
  image: Z_elev_75,
  scale: scale,
  maxPixels: 1e13}))
  .setOptions({
    title: 'Histogram of Pixel Values Quartiles 75%' ,
    hAxis: {title: 'Pixel Value'},
    vAxis: {title: 'Count'},
    legend: 'none'
  });
  
  print(histogram)

var histogram = ui.Chart.image.histogram(({
  image: Z_elev_95,
  scale: scale,
  maxPixels: 1e13}))
  .setOptions({
    title: 'Histogram of Pixel Values Quartiles 95%' ,
    hAxis: {title: 'Pixel Value'},
    vAxis: {title: 'Count'},
    legend: 'none'
  });
  
  print(histogram)


var cuts = ee.Image.cat([
                              Z_elev_orig ,
                              Z_elev_3    ,
                              Z_elev_75   ,
                              Z_elev_95   ,
                              ])
                .rename(['Original', '3', '25-75%', '5-95%']);

var pixels = 500;


var sampledPixels = cuts.sample({
  region: table,
  scale: scale,
  numPixels: pixels, 
  seed: 1234 
});



Map.addLayer(cuts)


// Get the Z score values of the sampled pixels as lists
var zScoreX = sampledPixels.aggregate_array('Original'); 
var zScoreY = sampledPixels.aggregate_array('5-95%'); 

// Create a scatter plot chart
var chart = ui.Chart.array.values({
  array: zScoreX,
  axis: 0,
  xLabels: zScoreY
}).setChartType('ScatterChart')
  .setOptions({
    title: 'Scatterplot of Z scores for Limited and Original',
    hAxis: {title: 'Z scores for Limited'},
    vAxis: {title: 'Z scores for Original'}
});

// Display the chart
print(chart);
