var biome = ee.FeatureCollection("projects/ee-lucasljardim9/assets/Biome")
                       .select("Bioma")
                       .filter(ee.Filter.eq("Bioma", "Cerrado"));

var div_cerrado = diversity.clip(biome);
var con_cerrado = connectedness.clip(biome);

var res_cerrado = classify_quantis(div_cerrado, con_cerrado);

var resilience = res_amazonia
var resilience = resilience.add(res_atlantica)
var resilience= resilience.add(res_pampa)
var resilience= resilience.add(res_pantanal)
var resilience= resilience.add(res_caatinga)
var resilience= resilience.add(res_cerrado)


