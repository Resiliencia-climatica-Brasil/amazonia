var calculate_variety = function(i){
  var elevation_variety = elevation
                       .reduceNeighborhood({reducer: ee.Reducer.stdDev(), 
                                            kernel: ee.Kernel.circle(i)});
  return elevation_variety;                                      
  
}

var elevation = ee.Image('projects/ee-resilience/assets/elevation_range_residual');


var bioma = ee.FeatureCollection("projects/ee-lucasljardim9/assets/Biome")
                        .map(function(feature){
                             return feature.bounds()
                             })
                        .geometry()
                        .dissolve({'maxError': 1})
                        .bounds();
                        
var windows = [2, 5, 7, 10, 15, 20];

var varieties = ee.ImageCollection(windows
                .map(calculate_variety))
                .toBands();


Export.image.toAsset({image: varieties.regexpRename('^(.*)', 'Win_$1'), //Function to change the name of bands by adding 'Win_Size_' prior to it
                      description: "variety_elev_maps_7-11-15", 
                      assetId: "variety_elev_maps_7-11-15", 
                      pyramidingPolicy:"median", 
                      region: bioma, 
                      scale: elevation.projection().nominalScale(),
                      maxPixels: 1e13})
