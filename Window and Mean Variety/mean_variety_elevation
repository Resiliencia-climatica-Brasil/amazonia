var bioma = ee.FeatureCollection("projects/ee-lucasljardim9/assets/Biome")
                        .filter(ee.Filter.eq('Bioma', 'Amaz√¥nia'))
                        // .map(function(feature){
                        //     return feature.bounds()
                        //     })
                        // .geometry()
                        // .dissolve({'maxError': 1})
                        // .bounds();

var maps = ee.Image("projects/ee-resilience/assets/Windows_Variety/variety_maps_VAR_elevation_range_residual")
    .clip(bioma);
//var maps = ee.Image("projects/ee-resilience/assets/Windows_Variety/variety_maps_VAR_soil_diversity");
//var maps = ee.Image("projects/ee-resilience/assets/Windows_Variety/variety_maps_VAR_wetlands_density_1000");

print(maps);
Map.addLayer(maps)

var variety_average = function(i){
  var average = maps.select(i)
                //.subtract(maps.select(i - 1))
                .reduceRegion({reducer: ee.Reducer.mean(), 
                              geometry: bioma, 
                              scale: maps.projection().nominalScale(), 
                              maxPixels: 1e13});
  return average;
}

// var variety_variance = function(i){
//   var variance = maps.select(i)
//                 //.subtract(maps.select(i - 1))
//                 .reduceRegion({reducer: ee.Reducer.variance(), 
//                               geometry: bioma, 
//                               scale: maps.projection().nominalScale(), 
//                               maxPixels: 1e13});
//   return variance;
//   };


var averages = [1, 2, 3, 4, 5].map(variety_average);
var variance = [1,2,3,4,5].map(variety_variance);

print('Averages',averages);
print('Variances',variance);


