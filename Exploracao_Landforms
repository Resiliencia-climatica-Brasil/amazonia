//---- Script para exploração dos resultados de Landform Classes para Amazonia ----
// Por Luciano Querido - 02/02/2023


//começamos importando todos os rasters que fizemos com os codigos desenvolvidos por Lucas
var limite_am = ee.FeatureCollection("projects/ee-resilience/assets/Shapefiles/AM_lim");

var landform_type = ee.Image("projects/ee-resilience/assets/Landforms_Assets/landform_types_Amazon").clip(limite_am);

var aspect_am = ee.Image("projects/ee-resilience/assets/Landforms_Assets/aspect_Amazon").clip(limite_am);

var tpi_am = ee.Image("projects/ee-resilience/assets/Landforms_Assets/TPI_Amazon").clip(limite_am);

var slope_am = ee.Image("projects/ee-resilience/assets/Landforms_Assets/slope_Amazon").clip(limite_am);


// creating the color pallete for use on maps

var typesVisPaleta = [
"#ffc408",
"#ffa101",
"#ef595a",
"#ffbdbe",
"#6e4100",
"#af7b53",
"#c8c284", 
"#c8f6ad",
"#83e763",
"#ffffbe",
"#a9a800",
"#b671f2",
"#010101",
"#08a702",
"#0a7000",
];


// Set a center and zoom level.
var center = {lon: -57, lat: -2, zoom: 8};

// Create two maps.
var leftMap = ui.Map(center);
var rightMap = ui.Map(center);

// Create a split panel with the two maps.
var splitPanel = ui.SplitPanel({
  firstPanel: leftMap,
  secondPanel: rightMap,
  orientation: 'horizontal',
  wipe: true
});

// Remove the default map from the root panel.
ui.root.clear();

// Add our split panel to the root panel.
ui.root.add(splitPanel);

// Add the layers to the maps

leftMap.addLayer( landform_type , {min:1, max: 44, palette:typesVisPaleta}, 'Landform Types');
