Map.addLayer(Z_elevation_scaled, {min:0, max:1, palette:palette}, 'Z-elevation');

// Map.addLayer(Z_wetlands_score_scaled_janela, {min:0, max:1, palette:palette}, 'Z-Wetlands SCALED WITHIN WINDOW');
Map.addLayer(Z_wetlands_score_scaled, {min:0, max:1, palette:palette}, 'Z-Wetlands masked');

// Map.addLayer(Z_soil_diversity_scaled_janela, {min:0, max:1, palette:palette}, 'Z-soil SCALED WITHIN Window');
Map.addLayer(Z_soil_diversity_scaled, {min:0, max:1, palette:palette}, 'Z-soil');




